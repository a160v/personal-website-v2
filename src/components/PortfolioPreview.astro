---
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"work">;
}

const { data, slug } = Astro.props.project;
---

<a class="card" href={`/work/${slug}`}>
  <span class="title">{data.title}</span>
  <img
    src={data.img}
    alt={data.img_alt || ""}
    loading="lazy"
    decoding="async"
  />
</a>

<style>
  .card {
    display: grid;
    grid-template: auto 1fr / auto 1fr;
    height: 20rem;
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    font-family: var(--font-brand);
    font-size: var(--text-lg);
    font-weight: 500;
    transition: box-shadow var(--theme-transition);
    margin-top: 1rem; /* Distance between work cards*/
    margin-bottom: 1rem; /* Distance between work cards*/
  }

  .card:hover {
    box-shadow: var(--shadow-lg);
  }

  .title {
    grid-area: 1 / 1 / 2 / 2;
    z-index: 1;
    margin: 1rem 2rem 2rem 1rem;
    padding: 0.7rem 2rem;
    border-radius: 0.375rem;
    color: var(--accent-text-over);
    background: var(--gradient-accent-orange);
    box-shadow: var(--shadow-md);
    white-space: nowrap;
  }

  img {
    grid-area: 1 / 1 / 3 / 3;
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: blur(1px);
  }

  @media (min-width: 50em) {
    .card {
      height: 25rem;
      border-radius: 1.5rem;
    }

    .title {
      border-radius: 0.9375rem;
    }
  }

  @media (max-width: 30em) {
    .card {
      height: 20rem;
      border-radius: 1.5rem;
    }

    .title {
      border-radius: 0.9375rem;
    }
  }

  /* iPhone 12 Pro Media Query */
  @media screen and (device-width: 390px) and (device-height: 844px) and (-webkit-device-pixel-ratio: 3) {
    .card {
      height: auto; /* change the height to auto */
      margin: -1rem 1rem 1rem -0.5rem;
      padding: -1rem;
    }

    .title {
      font-size: var(--text-md); /* reduce the font size */
      margin: 0.5rem -1rem 0rem 0rem;
      padding: -0.5rem;
    }
  }

  /* Samsung Galaxy S20 Media Query */
  @media screen and (device-width: 360px) and (device-height: 760px) and (-webkit-device-pixel-ratio: 3) {
    .card {
      height: auto; /* change the height to auto */
    }

    .title {
      font-size: var(--text-sm); /* reduce the font size */
    }
  }
</style>
