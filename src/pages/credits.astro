---
import BaseLayout from "../layouts/BaseLayout.astro";
// import ContactCTA from "../components/ContactCTA.astro";
---
<BaseLayout title="Credits" description="Website credits">
    <main class="wrapper credits">
      <section>
        <h1 class="section-title">Thanks</h1>
        <div class="content">
          <p><b>Everyone who shared their feedback and support</b></p>
          <p><a href="astro.build">Astro for framework and theme</a></p>
          <p><a href="https://phosphoricons.com/">Phosphor Icons for the icons</a></p>
          <p><a href="https://openai.com/blog/chatgpt">ChatGPT for assistance</a></p>
          <p><a href="https://www.overleaf.com/latex/templates/altacv-template/trgqjpwnmtgv">AltaCV for CV template</a></p>
        </div>
          <div id="th-container">
            <div id="th-emoji">
              <h1>üôá‚Äç‚ôÇÔ∏è</h1>
            </div>
          </div>
        </div>
      </section>
    </main>
  </BaseLayout>

<style>
  .credits {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    color: var(--gray-200);
  }

  .section-title {
    grid-column-start: 1;
    /* font-size: var(--text-xl); */
    color: var(--gray-0);
  }

  .content {
    grid-column: 2 / 4;
    color: var(--gray-200);
  }
  .content a {
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    color: var(--gray-200);
    transition: text-decoration-color var(--theme-transition);
  }

  .content :global(a:hover),
  .content :global(a:focus) {
    text-decoration-color: currentColor;
  }

  #th-container {
    display: none;
  }

  @media (min-width: 50em) {
    .credits {
      display: grid;
      grid-template-columns: 1fr 60% 1fr;
    }

    .credits > :global(:first-child) {
      grid-column-start: 2;
    }

    section {
      display: contents;
      font-size: var(--text-lg);
    }
  }
  @media (max-width:50em) {
    #th-container {
      display: table;
      width: 100%;
      height: 35vh;
      text-align: center;
    }
    #th-emoji {
      display: table-cell;
      vertical-align: middle;
    }
  }

</style>
