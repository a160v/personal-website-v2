---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<!-- Content starts -->
<BaseLayout title="404 Error" description="This page was not found">
  <div id="main">
    <div class="error">
      <a href="/"><h1>Error 404</h1></a>
      <p>click on 404 to go home</p>
    </div>
  </div>
</BaseLayout>
<!-- Content ends -->

<!-- Style starts -->
<style>
  #main {
    display: table;
    width: 100%;
    height: 60vh;
    text-align: center;
  }

  .error {
    display: table-cell;
    vertical-align: middle;
  }

  .error h1 {
    display: inline-block;
    padding-right: 12px;
    animation: type 0.5s alternate infinite;
  }

  @keyframes type {
    from {
      box-shadow: inset -3px 0px 0px #888;
    }
    to {
      box-shadow: inset -3px 0px 0px transparent;
    }
  }
</style>
